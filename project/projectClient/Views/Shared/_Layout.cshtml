<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Auto Scoring PE PRO192</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/projectClient.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Auto Scoring PE PRO192</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="ms-auto">
                    @if (Context.Request.HttpContext.Session.GetString("UserName") != null)
                    {
                        <p>Welcome @Context.Request.HttpContext.Session.GetString("UserName")</p>
                        <a class="nav-link" asp-controller="AuthClient" asp-action="Logout">Logout</a>
                    }
                    else
                    {
                        <a class="nav-link" asp-controller="AuthClient" asp-action="Login">Login</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-md-3 box-shadow mb-3">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-column justify-content-between">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    
                    @if (Context.Request.HttpContext.Session.GetString("UserName") != null)
                    {
                        <a class="nav-link" asp-controller="GradeClient" asp-action="Index">Scoring Exam</a>
                        <a class="nav-link" asp-controller="ExamClient" asp-action="Index">Exams</a>
                        <a class="nav-link" asp-controller="QuestionClient" asp-action="Index">Questions</a>
                        <a class="nav-link" asp-controller="TestCaseClient" asp-action="Index">TestCases</a>
                        <a class="nav-link" asp-controller="StudentGrade" asp-action="Index">Student Grades</a>
                    }


                </div>
            </div>
            <div class="col-md-9">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
        
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - projectClient - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
